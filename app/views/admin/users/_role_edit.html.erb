<div class="field-unit">
  <div class='field-unit__label'>
    <%= label_tag 'roles', 'Roles' %>
  </div>

  <div class='field-unit__field'>
    <% for role in roles %>
      <div class=''>
        <%= check_box_tag "user[roles]", role, user.roles.include?(role), { name: 'user[roles][]', style: 'margin: 0px;' } %>
        <%= label_tag "user_roles_#{role}", role.to_s.humanize, style: 'position: relative; top: -5px;' %>
      </div>
    <% end %>
  </div>
</div>
